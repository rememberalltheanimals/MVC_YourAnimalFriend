@model MVC_YourAnimalFriend.ViewModel.VolunteerViewModel


@{
    ViewBag.Title = "Add Volunteer";
    Layout = "~/Views/Shared/_AnimalSignLayout.cshtml";
}

<h2>Add Volunteer</h2>

@using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

<div class="form-horitontal">
    <h4>Donation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h2>@ViewBag.Donation.Name</h2>

    <span>Select Volunteer:</span>
    @Html.DropDownList("Name", new SelectList(ViewBag.MainVolunteers, "Name", "Name"))
    <input type="hidden" name="DonationId" value="@ViewBag.Donation.Id" />

    <div class="form-group">
        @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Visits, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Visits, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Visits, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sent, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sent, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sent, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FreeHours, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FreeHours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FreeHours, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>